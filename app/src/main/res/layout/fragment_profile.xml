<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/mark_pro_bold"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="30dp"
        app:cardElevation="10dp"
        app:shapeAppearanceOverlay="@style/RoundCorners_Top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/baseline_person_24"
                android:paddingRight="3dp"
                android:layout_margin="20dp"
                android:background="@drawable/image_background"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                >

            <TextView
                android:id="@+id/txtUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mark_pro_heavy"
                android:textSize="25dp"

                />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mark_pro_medium"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnOrderHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:backgroundTint="#99A0A0A0"
            android:background="@drawable/resource_menu"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_history_24"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mark_pro_bold"
                android:textSize="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:text="Order History"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="275dp"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:backgroundTint="#99D97777"
            android:background="@drawable/resource_menu"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_logout_24"
                android:layout_marginLeft="25dp"
                app:tint="#9D0000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mark_pro_bold"
                android:textSize="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:text="Log Out"
                android:textColor="#9D0000"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="338dp"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:backgroundTint="#99D97777"
            android:background="@drawable/resource_menu"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_delete_forever_24"
                android:layout_marginLeft="25dp"
                app:tint="#9D0000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mark_pro_bold"
                android:textSize="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:text="Delete Account"
                android:textColor="#9D0000"
                />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>