<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#237300"
    android:orientation="vertical">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#237300"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/mark_pro_bold"
            android:text="Welcome!"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logOut"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="Logout"
            android:layout_marginTop="-35dp"
            android:fontFamily="@font/mark_pro_bold"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="240dp"
            android:backgroundTint="#A90000"
            android:background="@drawable/resource01"
            />

    </com.google.android.material.appbar.AppBarLayout>

        <EditText
            android:id="@+id/resSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:hint="Search..."
            android:textColorHint="@color/transparent"
            android:fontFamily="@font/mark_pro_medium"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:background="@drawable/resource02"
            android:paddingBottom="10dp" />

    <!-- Background CardView -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="30dp"
        app:cardElevation="10dp"
        app:shapeAppearanceOverlay="@style/RoundCorners_Top">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Restaurant Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/restaurantCard"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/restaurantImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pizza_stack" />

                        <TextView
                            android:id="@+id/tvPizza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="12dp"
                            android:text="Pizza Stack"
                            android:fontFamily="@font/mark_pro_medium"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/burgerCard"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/restaurantImage2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/burger_shot" />

                        <TextView
                            android:id="@+id/tvBurger"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="12dp"
                            android:text="Burger Shot"
                            android:fontFamily="@font/mark_pro_medium"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/chineseCard"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/restaurantImage4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/chinatown" />

                        <TextView
                            android:id="@+id/tvChinese"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="12dp"
                            android:text="Chinatown"
                            android:fontFamily="@font/mark_pro_medium"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/southCard"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/restaurantImage3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/thalapathy" />

                        <TextView
                            android:id="@+id/tvSouth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="12dp"
                            android:text="Thalapathy's"
                            android:fontFamily="@font/mark_pro_medium"
                            android:textColor="@android:color/white"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tab_background"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:tabIndicator="@drawable/tab_indicator"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorGravity="stretch"
            app:tabSelectedTextColor="#237300"
            app:tabTextAppearance="@style/CustomText"
            app:tabTextColor="@color/white">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabExplore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="                    Explore                     " />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabTopRated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="               Top Rated               " />


        </com.google.android.material.tabs.TabLayout>

    </FrameLayout>

</LinearLayout>